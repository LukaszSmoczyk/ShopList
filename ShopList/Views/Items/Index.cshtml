@model ItemListViewModel
@{
    ViewBag.Title = "See your list";
}


<div class="container">
    <h2>@Model.ListName</h2>
</div>

<div class="container">
    <h4>Your items:</h4>

    <table class="table table-borderless table-hover">
        <thead>
            <tr>
                <th scope="col">Item</th>
                <th scope="col">Quantity</th>
                <th scope="col">Added on</th>
                <th scope="col">User</th>
            </tr>
        </thead>
        <tbody>
                @if (Model.Items != null)
                {
                    foreach (var item in Model.Items)
                    {
            <tr>
                <td>@item.ItemName</td>
                <td>@item.Quantity</td>
                <td>@item.DateOfAddingItem.ToString("dddd, dd/MM/yyyy hh:mm tt")</td>

            </tr>


                    }
                }
                else
                {
        <tr>
            <td>You don't have any items in your list</td>
        </tr>


                }
        </tbody>
    </table>

    <p>

    </p>
    <div class="card-body">
        <a class="btn btn-primary" asp-action="Create" asp-route-id="@Model.ListId">Add Item</a>
    </div>
</div>

