<!DOCTYPE html>
<html>
<head>
    <title>ShopList</title>
    <!-- Bootstrap CSS-->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/default.css" rel="stylesheet" />
</head>
<body>
<!-- navbar-->
<header class="header bg-dark">
    <div class="container px-0 px-lg-3">
        <nav class="navbar navbar-dark bg-dark navbar-expand-md">
            <h1 class="navbar-brand"><i class="fas fa-shopping-cart"></i> ShopList</h1>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#theMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="theMenu" class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="About">About</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Lists</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-controller="App" asp-action="AllLists">Your lists</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="App" asp-action="List">Create new list</a>
                            <a class="dropdown-item" asp-controller="App" asp-action="List">Edit your lists</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="Contact">Contact</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</header>
 
<section>
    @RenderBody()
</section>

<footer class="bg-dark text-white">
    <div class="container py-2">
        <div class="row">
            <div class="col-md-12 text-center">
                <a id="back-to-top" href="#" class="btn btn-outline-light btn-sm back-to-top" role="button" title="Click to return on the top page" data-toggle="tooltip" data-placement="left"><span class="fas fa-arrow-up"></span></a>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <p class="small text-muted mb-0">&copy; 2021 All rights reserved.</p>
            </div>
            <div class="col-lg-6 text-lg-right">
                <p class="small text-muted mb-0">Designed by <a class="text-white reset-anchor"><b>Łukasz Smoczyk</b></a></p>
            </div>
        </div>
    </div>
</footer>
<!-- JavaScript files-->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/fortawesome/fontawesome-free/js/fontawesome.js"></script>
<script src="~/lib/fortawesome/fontawesome-free/js/solid.js"></script>
<!-- FontAwesome CSS - loading as last, so it doesn't block rendering-->
<link href="~/lib/fortawesome/fontawesome-free/css/all.css" rel="stylesheet" />

</body>
</html>

