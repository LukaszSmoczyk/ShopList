@model ListViewModel
@{
    ViewData["Title"] = "Create List";
}

<h1>Create</h1>

<h4>List</h4>
<hr />
<div class="col-md-6 offset-md-3">
    <div class="card card-body bg-light">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="ListName">List title:</label>
                <input asp-for="ListName" class="form-control" />
                <span asp-validation-for="ListName"></span>
            </div>

            <div class="form-group">
                <button type="submit" value="Create"><i class='fas fa-marker'></i> Create list</button>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to All Lists</a>
</div>