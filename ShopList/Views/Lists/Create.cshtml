@model List
@{
    ViewData["Title"] = "Create List";
}
    <div class="col-md-6 offset-md-3">
    <h1>Create</h1>

    <h4>List</h4>
    <hr />
    </div>
    <div class="col-md-6 offset-md-3">
        <div class="card card-body bg-light">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ListName" class="control-label">List title:</label>
                    <input asp-for="ListName" class="form-control" />
                    <span asp-validation-for="ListName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary"><i class='fas fa-envelope'></i> Send Message</button>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to All Lists</a>
    </div>
